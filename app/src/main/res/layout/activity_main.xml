<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/etM"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:inputType="number"
            android:hint="Enter m"/>

        <EditText
            android:id="@+id/etN"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/etM"
            android:inputType="number"
            android:layout_marginTop="16dp"
            android:hint="Enter n"/>

        <Button
            android:id="@+id/btnGenerateMA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etM"
            android:layout_centerHorizontal="true"
            android:text="Generate Matrix" />

        <TextView
            android:id="@+id/tvMatrixMA"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_margin="16dp"
            android:layout_below="@id/btnGenerateMA" />

        <Button
            android:id="@+id/btnSolveMA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvMatrixMA"
            android:layout_centerHorizontal="true"
            android:text="Find Saddle points" />

        <TextView
            android:id="@+id/tvResultMA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_below="@id/btnSolveMA" />


    </RelativeLayout>

</ScrollView>